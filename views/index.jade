extends layout

block content
	div.Header
		div.Title
			h1 Calander 2013
		div.Controls
			select(name='month')
				option(value='0') January
				option(value='1') February
				option(value='2') March
				option(value='3') April
				option(value='4') May
				option(value='5', selected='selected') June
				option(value='6') July
				option(value='7') August
				option(value='8') September
				option(value='9') October
				option(value='10') November
				option(value='11') December
		div.clearfix
	div.Calendar
		div.CalendarHeader
			div.CalendarHeaderDay
				text Sunday
			div.CalendarHeaderDay
				text Monday
			div.CalendarHeaderDay
				text Tuesday
			div.CalendarHeaderDay
				text Wednesday
			div.CalendarHeaderDay
				text Thursday
			div.CalendarHeaderDay
				text Friday
			div.CalendarHeaderDay
				text Saturday
			div.clearfix
		div.CalendarBody